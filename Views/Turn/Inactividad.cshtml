@model caso_de_uso_6_ejercer_turno.Models.Domain.Player
@{
    ViewData["Title"] = "Inactividad";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="big">Inactividad</div>
<p>Quedan <span id="inactivity-timer">10</span> segundos para tirar el dado.</p>
<p>Jugador: <strong>@(Model?.Nombre ?? "Jugador")</strong></p>

<script>
    startInactivityTimer(10, function() {
        lanzarDado();
    });
</script>
