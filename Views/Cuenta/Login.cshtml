@model caso_de_uso_6_ejercer_turno.Models.LoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión - Parchís Online";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @@keyframes shake {
            0%, 100% { transform: translateX(0); }
            25% { transform: translateX(-10px); }
            75% { transform: translateX(10px); }
        }
        .shake {
            animation: shake 0.5s;
        }
        .dice-icon {
            width: 40px;
            height: 40px;
        }
    </style>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-500 via-purple-500 to-pink-500 flex items-center justify-center p-4">
    
    <!-- Fichas decorativas de fondo -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-10 left-10 w-16 h-16 bg-red-400 rounded-full opacity-20 animate-bounce"></div>
        <div class="absolute top-20 right-20 w-20 h-20 bg-yellow-400 rounded-full opacity-20 animate-pulse"></div>
        <div class="absolute bottom-20 left-1/4 w-12 h-12 bg-green-400 rounded-full opacity-20 animate-bounce"></div>
        <div class="absolute bottom-10 right-1/3 w-16 h-16 bg-blue-400 rounded-full opacity-20 animate-pulse"></div>
    </div>

    <div class="relative bg-white rounded-3xl shadow-2xl p-8 w-full max-w-md @(TempData["ErrorMessage"] != null ? "shake" : "")">
        
        <!-- Header con dado -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-full mb-4 shadow-lg animate-bounce">
                <svg class="dice-icon text-white" fill="currentColor" viewBox="0 0 24 24">
                    <rect x="3" y="3" width="8" height="8" rx="1"/>
                    <rect x="13" y="3" width="8" height="8" rx="1"/>
                    <rect x="3" y="13" width="8" height="8" rx="1"/>
                    <rect x="13" y="13" width="8" height="8" rx="1"/>
                    <circle cx="7" cy="7" r="1" fill="white"/>
                    <circle cx="17" cy="7" r="1" fill="white"/>
                    <circle cx="7" cy="17" r="1" fill="white"/>
                    <circle cx="17" cy="17" r="1" fill="white"/>
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Parchís Online</h1>
            <p class="text-gray-600">¡Bienvenido de nuevo!</p>
        </div>

        <!-- Mensajes -->
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="mb-4 p-3 bg-red-100 border border-red-400 text-red-700 rounded-lg">
                @TempData["ErrorMessage"]
            </div>
        }
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="mb-4 p-3 bg-green-100 border border-green-400 text-green-700 rounded-lg">
                @TempData["SuccessMessage"]
            </div>
        }

        <!-- Pestañas -->
        <div class="flex mb-6 bg-gray-100 rounded-lg p-1">
            <a href="@Url.Action("Login", "Cuenta")" class="flex-1 py-2 rounded-md font-semibold text-center bg-white text-purple-600 shadow transition-all">
                Iniciar Sesión
            </a>
            <a href="@Url.Action("Registrar", "Cuenta")" class="flex-1 py-2 rounded-md font-semibold text-center text-gray-600 hover:text-gray-800 transition-all">
                Registrarse
            </a>
        </div>

        <!-- Formulario de Login -->
        <form asp-action="Login" asp-controller="Cuenta" method="post" class="space-y-4">
            @Html.AntiForgeryToken()
            
            <!-- Usuario -->
            <div class="relative">
                <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                <input asp-for="Username" 
                       class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-lg focus:border-purple-500 focus:outline-none transition-colors" 
                       placeholder="Nombre de usuario" />
                <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
            </div>

            <!-- Contraseña -->
            <div class="relative">
                <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
                <input asp-for="Password" 
                       type="password"
                       class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-lg focus:border-purple-500 focus:outline-none transition-colors" 
                       placeholder="Contraseña" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <!-- Olvidé contraseña -->
            <div class="text-right">
                <a href="@Url.Action("ForgotPassword", "Account")" class="text-sm text-purple-600 hover:text-purple-700">
                    ¿Olvidaste tu contraseña?
                </a>
            </div>

            <!-- Botón submit -->
            <button type="submit" class="w-full bg-gradient-to-r from-purple-500 to-pink-500 text-white py-3 rounded-lg font-semibold hover:from-purple-600 hover:to-pink-600 transition-all shadow-lg hover:shadow-xl flex items-center justify-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
                </svg>
                Jugar Ahora
            </button>
        </form>

        <!-- Colores del juego decorativos -->
        <div class="flex justify-center gap-3 mt-8">
            <div class="w-8 h-8 bg-red-500 rounded-full shadow-md"></div>
            <div class="w-8 h-8 bg-yellow-400 rounded-full shadow-md"></div>
            <div class="w-8 h-8 bg-green-500 rounded-full shadow-md"></div>
            <div class="w-8 h-8 bg-blue-500 rounded-full shadow-md"></div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>