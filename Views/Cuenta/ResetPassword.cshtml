@model caso_de_uso_6_ejercer_turno.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Nueva Contraseña - Parchís Online";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-500 via-purple-500 to-pink-500 flex items-center justify-center p-4">

    <!-- Fichas decorativas de fondo -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-10 left-10 w-16 h-16 bg-red-400 rounded-full opacity-20 animate-bounce"></div>
        <div class="absolute top-20 right-20 w-20 h-20 bg-yellow-400 rounded-full opacity-20 animate-pulse"></div>
        <div class="absolute bottom-20 left-1/4 w-12 h-12 bg-green-400 rounded-full opacity-20 animate-bounce"></div>
        <div class="absolute bottom-10 right-1/3 w-16 h-16 bg-blue-400 rounded-full opacity-20 animate-pulse"></div>
    </div>

    <div class="relative bg-white rounded-3xl shadow-2xl p-8 w-full max-w-md">

        <!-- Header -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-blue-400 to-indigo-500 rounded-full mb-4 shadow-lg">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Nueva Contraseña</h1>
            <p class="text-gray-600">Ingresa tu nueva contraseña segura</p>
        </div>

        <!-- Formulario -->
        <form asp-action="ResetPassword" asp-controller="Cuenta" method="post" class="space-y-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Email" />
            <input type="hidden" asp-for="Token" />

            <!-- Nueva contraseña -->
            <div class="relative">
                <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                <input asp-for="Password"
                       type="password"
                       class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-lg focus:border-purple-500 focus:outline-none transition-colors"
                       placeholder="Nueva contraseña" />
                <span asp-validation-for="Password" class="text-red-500 text-sm block mt-1"></span>
            </div>

            <!-- Confirmar contraseña -->
            <div class="relative">
                <svg class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
                <input asp-for="ConfirmPassword"
                       type="password"
                       class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-lg focus:border-purple-500 focus:outline-none transition-colors"
                       placeholder="Confirmar contraseña" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm block mt-1"></span>
            </div>

            <!-- Requisitos de contraseña -->
            <div class="p-3 bg-gray-50 rounded-lg">
                <p class="text-xs text-gray-600 font-semibold mb-2">Tu contraseña debe tener:</p>
                <ul class="text-xs text-gray-600 space-y-1">
                    <li class="flex items-center gap-2">
                        <svg class="w-3 h-3 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        Al menos 6 caracteres
                    </li>
                </ul>
            </div>

            <!-- Botón submit -->
            <button type="submit" class="w-full bg-gradient-to-r from-blue-500 to-indigo-500 text-white py-3 rounded-lg font-semibold hover:from-blue-600 hover:to-indigo-600 transition-all shadow-lg hover:shadow-xl flex items-center justify-center gap-2">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                Restablecer Contraseña
            </button>
        </form>

        <!-- Colores del juego decorativos -->
        <div class="flex justify-center gap-3 mt-8">
            <div class="w-8 h-8 bg-red-500 rounded-full shadow-md"></div>
            <div class="w-8 h-8 bg-yellow-400 rounded-full shadow-md"></div>
            <div class="w-8 h-8 bg-green-500 rounded-full shadow-md"></div>
            <div class="w-8 h-8 bg-blue-500 rounded-full shadow-md"></div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>