@model caso_de_uso_6_ejercer_turno.Models.RegisterViewModel
@{
    ViewData["Title"] = "Registrarse - Parchís Online";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gradient-to-br from-blue-500 via-purple-500 to-pink-500 flex items-center justify-center p-4">
    
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-10 left-10 w-16 h-16 bg-red-400 rounded-full opacity-20 animate-bounce"></div>
        <div class="absolute top-20 right-20 w-20 h-20 bg-yellow-400 rounded-full opacity-20 animate-pulse"></div>
        <div class="absolute bottom-20 left-1/4 w-12 h-12 bg-green-400 rounded-full opacity-20 animate-bounce"></div>
        <div class="absolute bottom-10 right-1/3 w-16 h-16 bg-blue-400 rounded-full opacity-20 animate-pulse"></div>
    </div>

    <div class="relative bg-white rounded-3xl shadow-2xl p-8 w-full max-w-md">
        
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-gradient-to-br from-yellow-400 to-orange-500 rounded-full mb-4 shadow-lg animate-bounce">
                <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <rect x="3" y="3" width="8" height="8" rx="1"/>
                    <rect x="13" y="3" width="8" height="8" rx="1"/>
                    <rect x="3" y="13" width="8" height="8" rx="1"/>
                    <rect x="13" y="13" width="8" height="8" rx="1"/>
                </svg>
            </div>
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Parchís Online</h1>
            <p class="text-gray-600">¡Únete a la diversión!</p>
        </div>

        <!-- Pestañas -->
        <div class="flex mb-6 bg-gray-100 rounded-lg p-1">
            <a href="@Url.Action("Login", "Cuenta")" class="flex-1 py-2 rounded-md font-semibold text-center text-gray-600 hover:text-gray-800 transition-all">
                Iniciar Sesión
            </a>
            <a href="@Url.Action("Registrar", "Cuenta")" class="flex-1 py-2 rounded-md font-semibold text-center bg-white text-purple-600 shadow transition-all">
                Registrarse
            </a>
        </div>

        <form asp-action="Registrar" asp-controller="Cuenta" method="post" class="space-y-4">
            @Html.AntiForgeryToken()
            
            <div class="relative">
                <input asp-for="Username" class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-lg focus:border-purple-500 focus:outline-none" placeholder="Nombre de usuario" />
                <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
            </div>

            <div class="relative">
                <input asp-for="Email" type="email" class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-lg focus:border-purple-500 focus:outline-none" placeholder="Correo electrónico" />
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div class="relative">
                <input asp-for="Password" type="password" class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-lg focus:border-purple-500 focus:outline-none" placeholder="Contraseña" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <div class="relative">
                <input asp-for="ConfirmPassword" type="password" class="w-full pl-12 pr-4 py-3 border-2 border-gray-200 rounded-lg focus:border-purple-500 focus:outline-none" placeholder="Confirmar contraseña" />
                <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit" class="w-full bg-gradient-to-r from-purple-500 to-pink-500 text-white py-3 rounded-lg font-semibold hover:from-purple-600 hover:to-pink-600 transition-all shadow-lg">
                Crear Cuenta
            </button>
        </form>

        <div class="flex justify-center gap-3 mt-8">
            <div class="w-8 h-8 bg-red-500 rounded-full shadow-md"></div>
            <div class="w-8 h-8 bg-yellow-400 rounded-full shadow-md"></div>
            <div class="w-8 h-8 bg-green-500 rounded-full shadow-md"></div>
            <div class="w-8 h-8 bg-blue-500 rounded-full shadow-md"></div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>